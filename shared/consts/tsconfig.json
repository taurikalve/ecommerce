{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "NodeNext",
    // "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./build",
    // "paths": {
    //   "@/*": ["./src/*"]
    // },
    // "resolveJsonModule": true
    "skipLibCheck": false,
    // "allowUnreachableCode": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*"]
}
